{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "baseUrl": ".",
    "paths": {
      "@dayflow/core": ["packages/core/src/index.ts"],
      "@dayflow/react": ["packages/react/src/index.ts"],
      "@dayflow/vue": ["packages/vue/src/index.ts"],
      "@dayflow/angular": ["packages/angular/src/public-api.ts"],
      "@dayflow/svelte": ["packages/svelte/src/index.ts"],
      "@dayflow/plugin-localization": ["packages/plugins/localization/src/index.ts"],
      "@dayflow/plugin-keyboard-shortcuts": ["packages/plugins/keyboard-shortcuts/src/index.ts"],
      "@dayflow/plugin-sidebar": ["packages/plugins/sidebar/src/index.ts"],
      "@dayflow/plugin-drag": ["packages/plugins/drag/src/index.ts"],
      "@/*": ["packages/core/src/*"]
    }
  },
  "include": ["packages/*/src", "examples", "website"],
  "exclude": ["node_modules", "dist"]
}
