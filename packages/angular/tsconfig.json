{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "baseUrl": ".",
    "types": [],
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "paths": {
      "@dayflow/core": ["../core/src/index.ts"],
      "@/*": ["../core/src/*"]
