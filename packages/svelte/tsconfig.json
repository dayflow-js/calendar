{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "bundler",
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "declaration": true,
    "declarationDir": "dist",
    "baseUrl": ".",
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "verbatimModuleSyntax": false,
    "paths": {
      "@dayflow/core": ["../core/src/index.ts"],
      "@/*": ["../core/src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.svelte", "src/**/*.d.ts"]
}
