{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "dist/types",
    "declarationMap": false,
    "sourceMap": false,
    "module": "ESNext",
    "target": "ES2015",
    "jsx": "react-jsx",
    "noEmit": false,
    "baseUrl": "."
  },
  "include": ["src/**/*"],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ]
}
